<div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow mt-8">
  <h1 class="text-2xl font-bold text-gray-900 mb-6">User Login</h1>

  <%= form_with url: login_path, method: :post, class: "space-y-4" do |f| %>
    <div>
      <label for="nickname" class="block text-sm font-medium text-gray-700 mb-1">Nickname</label>
      <input type="text" name="nickname" id="nickname" required autofocus
             class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
             placeholder="Enter your nickname">
    </div>

    <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-md font-medium">
      Login
    </button>
  <% end %>

  <p class="mt-4 text-sm text-gray-600">
    Available users: alice, bob, charlie, diana, eve
  </p>
</div>
